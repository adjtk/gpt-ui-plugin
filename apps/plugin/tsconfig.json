{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "types": ["chrome"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "popup",
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "layouts/*": ["layouts/*"],
      "stores/*": ["stores/*"],
      "types/*": ["types/*"],
      "config/*": ["config/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "include": ["popup", "utils", "options", "iframe", "content-scripts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

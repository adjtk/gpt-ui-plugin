{
  "name": "gpt-ui-plugin",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "bun prepare.js",
    "pre-commit": "bunx lint-staged",
    "lint": "biome check .",
    "lint:apply": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.0.0",
    "@biomejs/cli-linux-x64": "^1.0.0",
    "cypress": "^12.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": ["biome check --apply .", "biome format --write ."]
  },
  "workspaces": [
    "apps/nextjs",
    "apps/plugin",
    "packages/config/*",
    "packages/ui",
    "packages/types"
  ]
}

{
  "name": "turbo-next-template",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "build": "turbo build",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "FIXME:lint": "turbo lint && manypkg check",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "pre-commit": "npx lint-staged",
    "lint": "biome check .",
    "lint:apply": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2",
    "turbo": "^1.9.8",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.0.0",
    "@biomejs/cli-linux-x64": "^1.0.0",
    "cypress": "^12.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "biome check --apply .",
      "biome format --write ."
    ]
  }
}
